{
  "version": "1.0.0",
  "name": "@dreamer/foundry",
  "description": "Foundry deployment and verification utilities for Deno and Bun",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts",
    "./cli": "./src/cli.ts",
    "./setup": "./src/setup.ts"
  },
  "publish": {
    "exclude": [
      "tests/",
      "*.test.ts",
      "*.test.js"
    ]
  },
  "test": {
    "exclude": [
      "tests/data/**"
    ]
  },
  "imports": {
    "@dreamer/web3": "jsr:@dreamer/web3@^1.0.6-beta.7",
    "@dreamer/logger": "jsr:@dreamer/logger@^1.0.0-beta.5",
    "@dreamer/runtime-adapter": "jsr:@dreamer/runtime-adapter@^1.0.0-beta.19",
    "@dreamer/test": "jsr:@dreamer/test@^1.0.0-beta.23",
    "@dreamer/console": "jsr:@dreamer/console@^1.0.3-beta.6"
  },
  "fmt": {
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "useTabs": false
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
	"nodeModulesDir": "auto",
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.27.2", "npm:puppeteer@24.36.0"]
  }
}
